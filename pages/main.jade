:php require_once('/../php/language.php') // Detect active language
.slider.main-slider(data-slider="main")
  :php $i = 0;
  :php foreach($language['main']['slider'] as $slide):
  .slide
    img.background(
      src!="<? set($slide['background']); ?>"
      alt
    )
    .content(class!="slide-<? set($i); ?>")
      .heading(
        data-language="main-slider"
        data-array!="<? set($i); ?>"
        data-item="heading"
      )!="<? set($slide['heading']); ?>"
      .subheading(
        data-language="main-slider"
        data-array!="<? set($i); ?>"
        data-item="subheading"
      )!="<? set($slide['subheading']); ?>"
      hr
      button.call Связаться
  :php $i++;
  :php endforeach
.slider-pager
  #bx-pager
    :php for($c = 0; $c < $i; $c++):
    a.slider-controll(
      data-slide-index!="<? set($c); ?>"
      href=""
    )
    :php endfor
  .slider-runner

.page.main
  .page-content
    h1.main-title(data-language="main-about-title")!="<? set($language['main']['about']['title']); ?>"
    p.page-text(data-language="main-about-text")!="<? set($language['main']['about']['text']); ?>"
    .page-delimiter
    .advantages-block
      h2.advantages-title(data-language="main-advantages_title")!="<? set($language['main']['advantages']['title']); ?>"
      .advantages
        :php $i = 0;
        :php foreach($language['main']['advantages']['data'] as $advantage):
        .advantage
          .image(class!="<? set($advantage['class']); ?>")
          h3(
            data-language="main-advantages-data"
            data-array!="<? set($i); ?>"
            data-item="title"
          )!="<? set($advantage['title']); ?>"
          p(
            data-language="main-advantages-data"
            data-array!="<? set($i); ?>"
            data-item="text"
          )!="<? set($advantage['text']); ?>"
        |  
        :php $i++;
        :php endforeach
      button.call(data-language="common-call")!="<? set($language['common']['call']); ?>"