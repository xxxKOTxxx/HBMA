:php session_start()  // Start session
:php require_once('/../php/language.php') // Detect active language

.page.accountant
  .page-content
    .page-heading
      .page-title(data-language="accountant-title")
        h1!="<? translate($languages['accountant']['title']); ?>"
      .page-image-block
        .page-image.accountant
    p.page-text(data-language="accountant-text")!="<? translate($languages['accountant']['text']); ?>"
    .page-delimiter
    .services-block
      h2.block-title(data-language="accountant-services-title")!="<? translate($languages['accountant']['services']['title']); ?>"
      p.block-text(data-language="accountant-services-text")!="<? translate($languages['accountant']['services']['text']); ?>"
      ul.block-list.services
        :php $i = 0;
        :php foreach($languages['accountant']['services']['data'] as $service):
        li.list-item.service
          h3.list-item-text(
              data-language="accountant-services-data" 
              data-array!="<? set($i); ?>"
            )!="<? translate($service); ?>"
        |  
        :php $i++;
        :php endforeach
    .calculator-block
      h2.block-title(data-language="accountant-calculator-title") <? echo $language['accountant-calculator-title']; ?>
      p.block-text(data-language="accountant-calculator-text") <? echo $language['accountant-calculator-text']; ?>
      form.calculator.accountant-calculator
        select.calculator-item.calculator-select.accountant-calculator-activity(
          data-affect="accountant-calculator-operations"
        )
          <? $i = 0; ?>
          <? foreach($language['accountant-calculator-activity'] as $activity) { ?>
          option(
            data-language="accountant-calculator-activity" 
            data-array!="<? set($i); ?>"
            value!='<?=htmlspecialchars(json_encode($activity[data])); ?>'
          ) <? echo $activity['title']; ?>
          <? $i++; ?>
          <? }; ?>
        select.calculator-item.calculator-select.accountant-calculator-operations
          <? foreach($language['accountant-calculator-activity'][0]['data'] as $operations) { ?>
          option(
            value=''
            data-price!="<?=$operations['price']; ?>"
            data-prefix!="<?=$operations['prefix']; ?>"
            data-units!="<?=$operations['units']; ?>"
          ) <? echo $operations['title']; ?> 
          <? }; ?>
        .calculator-result-block
          p.result-text(data-language="accountant-calculator-result") <? echo $language['accountant-calculator-result']; ?>:
            span.result-prefix
            span.result-value
            span.result-units

