@import "kouto-swiss"
@import "variables.styl"
.mfs-container
  size 100% 50px
  relative false
  max-width 414px
  font-size 14px
  line-height 50px
  color input-background-hover-color
  & select
    width 100%
    absolute 0 false false
    z-index 1
    opacity 0
  &.notouch select
    display none

.mfs-selected-option
  display block 
  padding 0 20px
  box-sizing border-box
  overflow hidden
  color input-background-hover-color
  background #ffffff
  text-decoration none
  white-space nowrap
  & span
    size 50px 100%
    absolute 0 0 false false
    display block
    padding 0
    &:after
      content ''
      size 0
      absolute 23px 20px false false
      display inline-block
      border-top 5px solid input-background-hover-color
      border-right 5px solid transparent
      border-left 5px solid transparent

.mfs-options
    absolute false
    z-index 10
    width 100% 
    margin 0
    padding 0
    list-style-type none
    background input-background-color

  li
    color text-color
    &.selected
      color input-background-hover-color
      &.active
        color input-text-color
    &.active
      color input-text-color
      background input-background-hover-color 
    a 
      display block
      padding 0 20px
      box-sizing border-box
      color inherit
      text-decoration none 


    &.mfs-optgroup
      padding 4px 5px
      color #999999
.mfs-optgroup-option
  padding-left 10px